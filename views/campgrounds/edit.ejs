<%# views/campgrounds/edit.ejs %>

<%include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-9 col-md-6 col-lg-4 mt-4">
        <h1 style="text-align: center;">Edit '<%= campground.name %>'</h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="sr-only" for="name">Name:</label>
                    <input class="form-control" id="name" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="price">Price:</label>
                    <input class="form-control" id="price" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="image">Image URL:</label>
                    <input class="form-control" id="image" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="desc">Description:</label>
                    <input type="text" class="form-control" id="desc" value="<%= campground.description %>" name="campground[description]">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="location">Location:</label>
                    <input type="text" class="form-control" id="location" value="<%= campground.location %>" name="campground[location]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Back</a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>